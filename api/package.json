{
  "name": "mybiblelog-api",
  "version": "1.0.0",
  "description": "My Bible Log API",
  "main": "server.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node server.ts --watch . --watch ../.env --ext ts,js,json",
    "dev:ts": "cross-env NODE_ENV=development nodemon --exec ts-node --transpile-only server.ts --watch . --watch ../.env --ext ts,js,json",
    "build": "tsc",
    "postbuild": "cp -r services/email/assets dist/services/email/assets",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "test": "jest ./test",
    "test:serial": "jest --runInBand ./test",
    "test:watch": "jest --watch ./test",
    "type-check": "tsc --noEmit",
    "script:seed": "ts-node ./scripts/seed.ts",
    "script:backup": "ts-node ./scripts/backup.ts",
    "script:delete-test-users": "ts-node ./scripts/delete-test-users.ts",
    "script:delete-stranded-data": "ts-node ./scripts/delete-stranded-data.ts",
    "script:migrate": "ts-node ./scripts/migrate.ts"
  },
  "author": "Aaron Smith",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@mybiblelog/shared": "file:../shared",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "errorhandler": "^1.5.1",
    "express": "^5.1.0",
    "form-data": "^4.0.4",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^9.0.0",
    "mongoose-unique-validator": "^5.0.1",
    "morgan": "^1.10.0",
    "resend": "^6.8.0",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "xml": "^1.0.1",
    "xml2js": "^0.6.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.9.1",
    "@types/nodemailer": "^7.0.5",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/xml2js": "^0.4.14",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.2.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "mongoose-unique-validator": {
      "mongoose": "^9.0.0"
    }
  }
}
