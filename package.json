{
  "name": "mybiblelog",
  "version": "1.0.0",
  "description": "A web app for tracking personal Bible reading, built with Nuxt.",
  "author": {
    "name": "Aaron Smith",
    "url": "https://github.com/AaronSmithX"
  },
  "private": true,
  "workspaces": [
    "api",
    "nuxt",
    "shared"
  ],
  "engines": {
    "node": "24.2.0"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:api dev:nuxt",
    "dev:api": "npm run --prefix api dev:ts",
    "dev:nuxt": "npm run --prefix nuxt dev",
    "start": "npm-run-all --parallel start:api start:nuxt",
    "start:api": "npm run --prefix api start",
    "start:nuxt": "npm run --prefix nuxt start",
    "build": "npm run build --prefix api && npm run build --prefix nuxt",
    "heroku-prebuild": "npm install && npm install --include=dev --prefix shared && npm install --prefix nuxt && npm install --prefix api",
    "heroku-postbuild": "npm run build",
    "clean": "rm -rf node_modules api/node_modules nuxt/node_modules shared/node_modules api/dist .nuxt nuxt/.nuxt shared/dist",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
    "test": "jest",
    "test:serial": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:api": "npm run --prefix api test",
    "test:e2e": "playwright test e2e",
    "test:e2e:ui": "playwright test e2e --ui",
    "script:seed": "npm run --prefix api script:seed",
    "script:backup": "npm run --prefix api script:backup",
    "script:delete-test-users": "npm run --prefix api script:delete-test-users",
    "script:delete-stranded-data": "npm run --prefix api script:delete-stranded-data",
    "script:migrate": "npm run --prefix api script:migrate"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 10000,
    "projects": [
      {
        "displayName": "api-tests",
        "testMatch": [
          "<rootDir>/api/test/**/*.test.js"
        ],
        "testEnvironment": "node"
      },
      {
        "displayName": "shared-tests",
        "preset": "ts-jest",
        "testMatch": [
          "<rootDir>/shared/**/*.test.ts"
        ],
        "testEnvironment": "node",
        "roots": [
          "<rootDir>/shared"
        ],
        "transform": {
          "^.+\\.ts$": "ts-jest"
        },
        "moduleFileExtensions": [
          "ts",
          "js",
          "json",
          "node"
        ]
      }
    ]
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@types/node": "^22.14.1",
    "eslint": "^7.32.0",
    "eslint-plugin-nuxt": "^2.0.0",
    "eslint-plugin-vue": "^7.20.0",
    "jest": "^29.7.0",
    "openai": "^4.54.0",
    "ts-jest": "^29.2.0"
  }
}
